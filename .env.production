# Production Environment Configuration
# CyberConnect - AWS Deployment

# Environment
VITE_ENV=production
NODE_ENV=production

# API Configuration (configure your own backend if available)
VITE_API_BASE_URL=https://api.cyberconnect.app
VITE_WS_BASE_URL=wss://api.cyberconnect.app

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false
VITE_ENABLE_DEBUG_LOGS=false

# Security
VITE_ENABLE_CSRF_PROTECTION=true
VITE_ENABLE_RATE_LIMITING=true
VITE_MAX_REQUESTS_PER_MINUTE=60

# Database (IndexedDB - client-side)
VITE_DB_NAME=CyberConnectDB
VITE_DB_VERSION=1

# Application
VITE_APP_NAME=CyberConnect
VITE_APP_VERSION=1.0.0

# External APIs - Users must configure their own keys
# These are placeholders - actual keys should be entered in the app Settings
VITE_HACKERONE_API_KEY=
VITE_BUGCROWD_API_KEY=
VITE_INTIGRITI_API_KEY=
VITE_YESWEHACK_API_KEY=
VITE_VIRUSTOTAL_API_KEY=
VITE_SHODAN_API_KEY=
